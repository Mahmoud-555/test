<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Friends</title>
  <link rel="stylesheet" href="/stylesheets/index-style.css" />
  <style>
    .container {
      max-width: 960px;
      margin: auto;
      background: #03101f;
      padding: 30px;
      border-radius: 12px;
      color: #f5f5f5;
    }
    h1 {
      margin-bottom: 20px;
    }
    .search-box {
      margin-bottom: 20px;
    }
    input[type="text"] {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .tabs {
      display: flex;
      gap: 20px;
      margin-bottom: 20px;
    }
    .tab {
      cursor: pointer;
      padding: 10px 20px;
      background: #07263e;
      border-radius: 6px;
      font-weight: 600;
      color: #c0c0c0;
      user-select: none;
    }
    .tab.active {
      background: #198754;
      color: white;
    }
    .tab-content {
      display: none;
    }
    .tab-content.active {
      display: block;
    }
    .friends-list {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .friend-card {
      background: #07263e;
      border-radius: 10px;
      padding: 12px;
      display: flex;
      align-items: center;
      gap: 15px;
      min-width: 250px;
      flex: 1 1 250px;
      color: #f5f5f5;
      transition: background 0.3s;
    }
    .friend-card:hover {
      background: #103b66;
    }
    .friend-card img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #0b1a2a;
    }
    .friend-card p {
      font-size: 14px;
      margin-top: 4px;
      flex: 1;
    }
    .friend-btn {
      background: #198754;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 6px 12px;
      cursor: pointer;
      font-size: 14px;
      transition: background 0.3s;
    }
    .friend-btn.decline {
      background: #dc3545;
      margin-left: 10px;
    }
    .friend-btn.cancel {
      background: #6c757d;
      margin-left: 10px;
    }
    .friend-btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Find Friends</h1>
    <div class="search-box">
      <input type="text" id="searchInput" placeholder="Search by name or username..." />
    </div>
    <div class="tabs">
      <div class="tab active" data-tab="friendsList">Friends</div>
      <div class="tab" data-tab="searchResults">Search Results</div>
      <div class="tab" data-tab="friendRequests">Friend Requests</div>
      <div class="tab" data-tab="sentRequests">Sent Requests</div>
    </div>
    <div id="friendsList" class="tab-content active">
      <div class="friends-list" id="friendsListContainer">
        <!-- Friends list will appear here -->
      </div>
    </div>
    <div id="searchResults" class="tab-content">
      <div class="friends-list" id="searchResultsList">
        <!-- Search results will appear here -->
      </div>
    </div>
    <div id="friendRequests" class="tab-content">
      <div class="friends-list" id="friendRequestsList">
        <!-- Friend requests will appear here -->
      </div>
    </div>
    <div id="sentRequests" class="tab-content">
      <div class="friends-list" id="sentRequestsList">
        <!-- Sent requests will appear here -->
      </div>
    </div>
  </div>

  <script src="/javascripts/friends.js"></script>
</body>
</html>
