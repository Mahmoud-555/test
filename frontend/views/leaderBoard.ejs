    <style>
        ::-webkit-scrollbar {
            width: 0px;
            height: 0px;
        }

        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #6e7dff, #ff5e62);
            background-size: cover;
            color: #f5f5f5;
            min-height: 100vh;
            /* display: flex;
            justify-content: center;
            align-items: center; */
            overflow: hidden;
        }

        .leaderboard-container {
            width: 95%;
            max-width: 1200px;
            margin: 20PX auto;
            background: rgba(0, 0, 0, 0.6);
            /* Semi-transparent background */
            border-radius: 20px;
            /* padding: 40px; */
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);

            /* Glassmorphism effect */
            display: flex;
            flex-direction: column;
            height: 92vh;
        }

        .leaderboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
            padding-bottom: 20px;
            border-bottom: 2px solid #444;
        }

        .leaderboard-header h1 {
            /* font-size: 42px; */

            color: #fff;
            font-weight: 700;
            letter-spacing: 1px;
            padding: 20px;

        }

        .filters {
            display: flex;
            gap: 20px;
        }

        .sort-button {
            padding: 12px 20px;
            background: linear-gradient(135deg, #ff9966, #ff5e62);
            color: white;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .sort-button:hover {
            background: linear-gradient(135deg, #ff5e62, #ff9966);
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 94, 98, 0.4);
        }

        /* Grid Layout for Leaderboard */
        /* .leaderboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            transition: grid-template-columns 0.3s ease;
        } */

        .leaderboard {
            transition: grid-template-columns 0.3s ease;
            overflow: scroll;
            max-height: 500px;
            padding: 20px;
            gap: 1rem;
            display: flex;
            flex-direction: column;
            /* mask-image: linear-gradient(to right,transparent 0, black 128px,black calc(100% - 128px),transparent 100%) */
            /* mask-image: linear-gradient(to right, transparent 0, black 128px, black calc(100% - 128px), transparent 100%) */

        }

        .leaderboard-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            backdrop-filter: blur(5px);
            /* overflow: hidden; */
            animation: fadeIn 0.5s ease-out;
        }

        .leaderboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.3);
        }

        .rank-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: #ff5e62;
            padding: 12px 20px;
            color: white;
            font-size: 24px;
            font-weight: 700;
            border-radius: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease;
        }

        .rank-badge:hover {
            transform: rotate(15deg);
        }

        .player-info {
            display: flex;
            /* flex-direction: column; */
            align-items: center;
            /* margin-top: 50px; */
            justify-content: space-between;
        }

        .player-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            border: 4px solid #ff5e62;
            /* margin-bottom: 20px; */
            transition: transform 0.3s ease;
        }

        .player-avatar:hover {
            transform: scale(1.1);
        }

        .player-name {
            font-size: 24px;
            color: #fff;
            font-weight: 600;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .player-details {
            text-align: center;
        }

        .player-score {
            font-size: 20px;
            color: #f7b731;
            font-weight: 700;
        }

        .player-progress {
            width: 100%;
            height: 8px;
            background-color: #555;
            border-radius: 5px;
            margin-top: 15px;
        }

        .progress-bar {
            height: 100%;
            border-radius: 5px;
            background-color: #ff5e62;
        }

        /* Footer */
        .leaderboard-footer {
            margin-top: 30px;
            text-align: center;
            font-size: 14px;
            color: #bbb;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }



        /* Base styles for mobile devices (default) */
        body {
            font-size: 16px;

        }



        /* Tablet styles */
        @media (min-width: 768px) {
            body {
                font-size: 18px;
                /* Slightly larger text */
            }



        }


        /* Desktop styles */
        @media (min-width: 1024px) {
            body {
                font-size: 20px;
                /* Even larger text */
            }





        }

        /* Large Desktop styles */
        @media (min-width: 1440px) {
            body {
                font-size: 22px;
                /* Larger text for bigger screens */
            }
        }

        /* Extra Large Desktop styles */
        @media (min-width: 1920px) {
            body {
                font-size: 24px;
                /* Largest text for extra large screens */
            }
        }



        /* Responsive Design for Mobile and Tablet */
        @media (max-width: 768px) {
            .leaderboard-header h1 {
                font-size: 32px;
            }

            .sort-button {
